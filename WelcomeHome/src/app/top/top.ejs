<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>トップページ</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="top.css">
    <link rel="stylesheet" href="/app.css">
    <style>
        .swiper-container {
            height: calc(100vh - 4rem); /* 画面全体の高さからアイコンの高さを引く */
            margin-top: 4rem; /* アイコンの高さ分のマージンを追加 */
        }
        .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
            height: auto; /* スライドの高さを自動調整 */
        }
        .swiper-wrapper {
            flex-direction: column; /* 縦方向にスライドを並べる */
        }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center">
    <div class="container text-center">
        <div class="position-fixed top-0 end-0 p-3">
            <button id="settings-button" class="btn btn-link">
                <i class="bi bi-gear-fill" style="font-size: 3rem;"></i>
            </button>
        </div>
        <div class="swiper-container">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <a href="/welcome" class="btn btn-custom">Welcome</a>
                </div>
                <div class="swiper-slide">
                    <a href="/board" class="btn btn-custom">伝言板</a>
                </div>
                <div class="swiper-slide">
                    <a href="/camera" class="btn btn-custom">監視カメラ</a>
                </div>
                <div class="swiper-slide">
                    <a href="/photo_frame" class="btn btn-custom">フォトフレーム</a>
                </div>
                <div class="swiper-slide">
                    <a href="/photo_upload" class="btn btn-custom">写真アップロード</a>
                </div>
                <div class="swiper-slide">
                    <a href="/dummy" class="btn btn-custom">Dummy 5</a>
                </div>
                <div class="swiper-slide">
                    <a href="/dummy" class="btn btn-custom">Dummy 6</a>
                </div>
                <div class="swiper-slide">
                    <a href="/dummy" class="btn btn-custom">Dummy 7</a>
                </div>
            </div>
            <!-- スクロールバーを追加 -->
            <div class="swiper-scrollbar"></div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const swiper = new Swiper('.swiper-container', {
                direction: 'vertical', // 縦方向にスライド
                slidesPerView: 'auto',
                spaceBetween: 10,
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                scrollbar: {
                    el: '.swiper-scrollbar',
                    draggable: true,
                },
                mousewheel: true, // マウスホイールでのスクロールを有効にする
            });

            document.getElementById('settings-button').addEventListener('click', function() {
                window.location.href = '/settings';
            });
        });
    </script>
</body>
</html>
